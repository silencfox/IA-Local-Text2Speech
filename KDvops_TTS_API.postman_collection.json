    "description": "Colección Postman para consumir la API KDvops TTS (FastAPI + Piper).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "voice",
      "value": "es_ES",
