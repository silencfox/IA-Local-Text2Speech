    },
    {
      "name": "Speak – POST /speak (MP3 por defecto)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"{{sample_text}}\",\n  \"voice\": \"{{voice}}\",\n  \"onnx_url\": \"{{onnx_url}}\",\n  \"json_url\": \"{{json_url}}\",\n  \"fmt\": \"{{fmt}}\",\n  \"length_scale\": 1.0,\n  \"noise_scale\": 0.667,\n  \"sentence_silence\": 0.2\n}"
        },
        "url": {
          "raw": "{{base_url}}/speak",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "speak"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
              "// Guardar audio binario no es directo en Postman; sugerencia: usar curl o Newman para descargar."
